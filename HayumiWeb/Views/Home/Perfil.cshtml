@model HayumiWeb.Models.ClienteModel



<center><h2>Perfil do Cliente</h2></center>

<!-- Exibição dos dados do cliente -->
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Informações do Perfil</h4>
        <p><strong>Nome:</strong> @Model.NomeCli</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Telefone:</strong> @Model.Telefone</p>
        <p><strong>Data de Nascimento:</strong> @Model.DataNasc.ToString("dd/MM/yyyy")</p>
        <p><strong>CEP:</strong> @Model.CEP</p>
        <p><strong>Endereço: </strong>@Model.Logradouro @Model.NumEnd, @Model.CompEnd</p>

        <!-- Exibindo informações do endereço -->
        

        <!-- Exibindo informações de Bairro, Cidade e UF -->
        @if (Model.Bairro != null)
        {
            <p><strong>Bairro:</strong> @Model.Bairro.Bairro</p>
        }
        @if (Model.Cidade != null)
        {
            <p><strong>Cidade:</strong> @Model.Cidade.Cidade</p>
        }
        @if (Model.Estado != null)
        {
            <p><strong>UF:</strong> @Model.Estado.UF</p>
        }

        <!-- Botão para editar perfil -->
        <a class="btn btn-warning" href="@Url.Action("Editar", "Home")" >Editar Perfil</a>
    </div>
</div>
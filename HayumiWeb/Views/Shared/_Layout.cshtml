<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  Hayumi - Loja de autopeças</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HayumiWeb.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <header>
        <div class="ss d-flex justify-content-evenly align-items-center mb-3" style="background-color:#002454;">
            <a class="btn" href="" style="text-decoration-line: none;color: #FFFFFF;cursor: pointer;">A confiança que move seu <span style="color:#FFCC00">carro</span></a>
            <a class="btn" href="" role="button" style="text-decoration-line: none;color: #FFCC00;cursor: pointer;">Lojas</a>
            <a class="btn" href="" role="button" style="text-decoration-line: none;color: #FFCC00;cursor: pointer;">Suporte</a>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo2.png" width="114px" height="105px">
                </a>
                <div class="d-flex flex-grow-1 justify-content-center">
                    <form method="get" class="d-flex mx-auto" role="search">
                        <input type="text" class="form-control me-2 search-input" placeholder="Pesquisar" action="">
                        <button type="submit" class="btn btn-outline-secondary search-button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="bi bi-search search-icon" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    @if (ViewBag.UsuarioNome != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @ViewBag.UsuarioNome
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown" style="background-color: #002454; border: 1px solid #FFCC00;">
                                <li><a class="dropdown-item" href="#" style="color: #FFCC00;">Perfil</a></li>
                                <li><a class="dropdown-item" href="#" style="color: #FFCC00;">Configurações</a></li>
                                <li><hr class="dropdown-divider" style="border-color: #FFCC00;"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Logout" style="color: #FFCC00;">Sair</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login" id="botaoentrar">Entrar</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>



        <main role="main" class="pb-3">
            @RenderBody()
        </main>


    <footer class="border-top footer text-muted" style="background-color:#002454;">
        <div id="footer_content" style="display: flex; align-items: center; justify-content: space-between;">
            <div style="flex: 1; display: flex; justify-content: flex-start;">
                <img src="~/img/logo.png" width="100" height="100" alt="Logo">
            </div>
            <div style="flex: 1; text-align: center; color: #FFCC00;">
                <span>&copy; 2024 - Hayumi </span>
            </div>
            <div id="redes_sociais" style="flex: 1; display: flex; justify-content: flex-end;">
                <a href="" target="_blank">
                    <img src="~/img/zap.png" width="41" height="37" alt="WhatsApp" style="margin-left: 10px;">
                </a>
                <a href="" target="_blank">
                    <img src="~/img/insta.png" width="41" height="37" alt="Instagram" style="margin-left: 10px;">
                </a>
                <a href="" target="_blank">
                    <img src="~/img/face.png" width="41" height="37" alt="Facebook" style="margin-left: 10px;">
                </a>
                <a href="">
                    <img src="~/img/email.png" width="41" height="37" alt="Gmail" style="margin-left: 10px;">
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
